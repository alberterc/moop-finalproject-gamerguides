<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".getstarted.InitialSignUp">

    <RelativeLayout
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        <ImageView
                android:id="@+id/image"
                android:src="@drawable/ic_launcher_background"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="app_logo"/>

        <TextView
                android:id="@+id/create_account_title"
                android:text="CREATE AN ACCOUNT"
                android:textSize="24sp"
                android:textColor="@color/main_textcolor"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"
                android:layout_alignTop="@id/image"
                android:layout_marginTop="200dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        />

        <TextView
                android:id="@+id/create_account_details"
                android:text="@string/lorem_ipsum_dummy"
                android:textSize="15sp"
                android:textColor="@color/main_textcolor"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_regular"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_alignTop="@id/create_account_title"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

        <android.widget.Button
                android:id="@+id/create_account_button"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/main_button_background"
                android:text="Create Account"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_bold"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textSize="18sp"
                android:layout_alignTop="@id/create_account_details"
                android:layout_marginTop="186dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/already_have_account"
                android:clickable="true"
                android:text="Already have an account?"
                android:textColor="#1760CE"
                android:fontFamily="@font/montserrat_regular"
                android:layout_alignTop="@id/create_account_button"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

    </RelativeLayout>

</RelativeLayout>